<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    width="match_parent"
    height="wrap_content"
    orientation="horizontal"
    gravity="left|center"
    paddingRight="10dp"
    paddingLeft="10dp">

  <TextView
      tag="time"
      width="40dp"
      height="wrap_content"
      textSize="13dp"
      alpha="0.5"
      paddingTop="4dp"
      gravity="center"
      paddingBottom="3dp"
      marginLeft="5dp"
      text="00:00\n24 fev"/>

  <FrameLayout
      width="48dp"
      height="60dp"
      marginLeft="5dp">

    <TrackLine
        id="line_up"
        width="5dp"
        height="wrap_content"
        layoutGravity="top|center"
        alpha="0.25"
        background="?colorPrimaryVariant"/>

    <TrackLine
        id="line_down"
        width="5dp"
        height="wrap_content"
        layoutGravity="bottom|center"
        alpha="0.25"
        background="?colorPrimaryVariant"/>

    <ImageView
        id="icon"
        width="match_parent"
        height="48dp"
        layoutGravity="center"
        padding="10dp"
        background="@drawable/circle"/>

  </FrameLayout>


  <LinearLayout
      width="match_parent"
      height="wrap_content"
      paddingLeft="20dp">
    <TextView
        tag="title"
        width="match_parent"
        height="wrap_content"
        textSize="16dp"
        text="Title"/>

    <TextView
        tag="desc"
        width="match_parent"
        height="wrap_content"
        textSize="13dp"
        alpha="0.5"
        paddingTop="4dp"
        paddingBottom="3dp"
        text="Title"/>
  </LinearLayout>

</LinearLayout>