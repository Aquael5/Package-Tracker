<?xml version="1.0" encoding="UTF-8" ?>
<AbsoluteLayout
    width="match_parent"
    height="match_parent"
    background="?colorSurface">

  <FrameLayout
      width="match_parent"
      height="match_parent"
      paddingTop="64dp"
      orientation="horizontal">

    <ImageView
        id="track_icon"
        width="match_parent"
        height="100dp"
        src="@drawable/track_logo"/>

  </FrameLayout>

  <LinearLayout
      width="match_parent"
      height="match_parent"
      orientation="horizontal"
      paddingTop="20dp"
      gravity="center">
    <LinearLayout
        width="match_parent"
        height="wrap_content"
        padding="40dp">

      <FrameLayout
          width="match_parent"
          height="50dp"
          background="@drawable/text_layout">
        <TextView
            width="wrap_content"
            height="wrap_content"
            paddingBottom="5dp"
            background="?colorSurface"
            marginLeft="20dp"
            textStyle="bold"
            textColor="#5FFF"
            text="@string/package_name"/>

        <EditText
            id="title"
            width="match_parent"
            height="match_parent"
            paddingTop="18dp"
            paddingLeft="20dp"
            gravity="left|center"
            singleLine="true"
            background="#0000"/>

      </FrameLayout>
      <FrameLayout
          width="match_parent"
          height="50dp"
          marginTop="20dp"
          background="@drawable/text_layout">
        <TextView
            width="wrap_content"
            height="wrap_content"
            paddingBottom="5dp"
            background="?colorSurface"
            marginLeft="20dp"
            textStyle="bold"
            textColor="#5FFF"
            text="@string/track_code"/>

        <EditText
            id="trackId"
            width="match_parent"
            height="match_parent"
            paddingTop="18dp"
            paddingLeft="20dp"
            gravity="left|center"
            singleLine="true"
            background="#0000"/>

      </FrameLayout>

      <LinearLayout
          width="match_parent"
          height="wrap_content"
          gravity="center"
          paddingTop="5dp"
          orientation="vertical">

        <TextView
            id="shipper_name"
            width="match_parent"
            height="wrap_content"
            paddingBottom="5dp"
            textStyle="bold"
            gravity="center"
            textColor="#5FFF"
            textSize="16dp"
            layoutGravity="center|top"
            text=""/>

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      width="match_parent"
      height="match_parent"
      orientation="horizontal"
      gravity="bottom">

    <LinearLayout
        width="match_parent"
        height="wrap_content"
        padding="40dp">
      <Button
          id="register"
          width="match_parent"
          height="40dp"
          text="@string/register"/>
      <View width="4dp" height="4dp"/>
      <Button
          id="cancel"
          width="match_parent"
          height="40dp"
          background="#0000"
          text="@string/cancel"/>
    </LinearLayout>

  </LinearLayout>


</AbsoluteLayout>