<?xml version="1.0" encoding="UTF-8" ?>
<AbsoluteLayout
    width="match_parent"
    height="match_parent"
    background="?colorSurface">

  <LinearLayout
      width="match_parent"
      height="match_parent"
      paddingTop="64dp"
      orientation="horizontal">

    <ImageView
      id="track_icon"
      width="match_parent"
      height="100dp"
      src="@drawable/track_logo"/>

  </LinearLayout>

  <LinearLayout
      width="match_parent"
      height="match_parent"
      orientation="horizontal"
      gravity="center">
    <LinearLayout
        width="match_parent"
        height="wrap_content"
        padding="40dp">

      <FrameLayout
        width="match_parent"
        height="50dp"
        background="@drawable/text_layout">
        <TextView
            width="wrap_content"
            height="wrap_content"
            paddingBottom="5dp"
            background="?colorSurface"
            marginLeft="20dp"
            textStyle="bold"
            textColor="#5FFF"
            text="  NOME DO PACOTE  "/>

        <EditText
            tag="title"
            width="match_parent"
            height="match_parent"
            paddingTop="18dp"
            paddingLeft="20dp"
            gravity="left|center"
            singleLine="true"
            background="#0000"/>

      </FrameLayout>
      <FrameLayout
        width="match_parent"
        height="50dp"
        marginTop="20dp"
        background="@drawable/text_layout">
        <TextView
            width="wrap_content"
            height="wrap_content"
            paddingBottom="5dp"
            background="?colorSurface"
            marginLeft="20dp"
            textStyle="bold"
            textColor="#5FFF"
            text="  CODIGO DE RASTREIO  "/>

        <EditText
            tag="trackId"
            width="match_parent"
            height="match_parent"
            paddingTop="18dp"
            paddingLeft="20dp"
            gravity="left|center"
            singleLine="true"
            background="#0000"/>

      </FrameLayout>

      <LinearLayout
        width="match_parent"
        height="wrap_content"
        gravity="center"
        paddingTop="15dp"
        orientation="vertical">

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      width="match_parent"
      height="match_parent"
      orientation="horizontal"
      gravity="bottom">

    <LinearLayout
        width="match_parent"
        height="wrap_content"
        padding="40dp">
      <Button
          tag="register"
          width="match_parent"
          height="40dp"
          text="REGISTER"/>
      <View width="4dp" height="4dp"/>
      <Button
          tag="cancel"
          width="match_parent"
          height="40dp"
          background="#0000"
          text="CANCEL"/>
    </LinearLayout>

  </LinearLayout>


</AbsoluteLayout>